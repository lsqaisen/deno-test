{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"jsx": "react",
		"sourceMap": true,
		"moduleResolution": "node",
		"strict": true,
		"noEmit": true,
		"allowJs": true,
		"skipLibCheck": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": [
			"es5",
			"es6",
			"dom"
		]
	}
}